{
  "name": "codescrub",
  "displayName": "CodeScrub",
  "description": "Automatically replace sensitive content in source code when copying for safe sharing.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeScrub",
          "title": "CodeScrub",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "codeScrub": [
        {
          "id": "codeScrubConfigView",
          "name": "Scrub Config"
        }
      ]
    },
    "commands": [
      {
        "command": "codeScrub.copyWithReplacements",
        "title": "Copy with Scrubbed Content"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
